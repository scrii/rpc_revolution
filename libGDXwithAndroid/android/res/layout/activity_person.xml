<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/person"
    android:orientation="vertical"
    tools:context=".PersonActivity">

        <androidx.core.widget.NestedScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/izm_nickname"
            android:text="@string/izm"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_gravity="center"/>

        <cn.zhaiyifan.rememberedittext.RememberEditText
            android:id="@+id/name_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:hint="@string/enter_your_nickname"
            android:inputType="text"
            app:autoFill="true"
            app:autoSave="true"
            app:rememberCount="3"
            app:rememberId="nickname" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:visibility="invisible"
            android:text="@string/confirm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/setting_tv"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="@string/settings"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/econom"
                    android:padding="6dp"
                    android:id="@+id/econom"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:textSize="17dp"/>
        </LinearLayout>
</LinearLayout>