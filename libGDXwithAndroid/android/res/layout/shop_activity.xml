<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/shop"
    tools:context=".ShopActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/shop_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/l1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l2">

            <TextView
                android:id="@+id/info_health"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/string_health"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/real_health"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/int_start_health"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l3">

            <TextView
                android:id="@+id/info_damage"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/string_damage"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/real_damage"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/int_start_damage"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l4">

            <TextView
                android:id="@+id/info_protect"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/string_protection"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/real_protect"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/int_start_damage"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l5">

            <TextView
                android:id="@+id/info_speed"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/string_speed"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/real_speed"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/int_start_health"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/space">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/space"
                android:id="@+id/space1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l6">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/string_maneuverability"
                android:id="@+id/info_maneuverability"
                android:textSize="20dp"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/real_maneuverability"
                android:text="@string/int_start_health"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plus_one"
                android:id="@+id/maneuverability_plus_one"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l7">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/string_attack"
                android:id="@+id/info_attack"
                android:textSize="20dp"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/real_attack"
                android:text="@string/int_start_health"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plus_one"
                android:id="@+id/attack_plus_one"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l8">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/string_protection"
                android:id="@+id/info_protection"
                android:textSize="20dp"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/real_protection"
                android:text="@string/int_start_protection"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plus_one"
                android:id="@+id/protect_plus_one"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l9">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/string_speed"
                android:id="@+id/info_speed_plus_one"
                android:textSize="20dp"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/real_speed_pus_one"
                android:text="@string/int_start_protection"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plus_one"
                android:id="@+id/speed_plus_one"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/space2"
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <TextView
                android:id="@+id/space3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/space" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:id="@+id/l10">

            <TextView
                android:id="@+id/null_number"
                android:layout_width="277dp"
                android:layout_height="match_parent"
                android:text="@string/drop"
                android:textSize="14.5dp" />

            <Button
                android:id="@+id/null_number_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/drop_mini" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>