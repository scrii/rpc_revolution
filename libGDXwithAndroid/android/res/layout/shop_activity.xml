<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/shop"
    tools:context=".ShopActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/shop_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/l1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l2">

            <TextView
                android:id="@+id/info_health"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Здоровье                  "
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/real_health"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="10"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l3">

            <TextView
                android:id="@+id/info_damage"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Урон                  "
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/real_damage"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="3"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l4">

            <TextView
                android:id="@+id/info_protect"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Защита                  "
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/real_protect"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="3"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l5">

            <TextView
                android:id="@+id/info_speed"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Скорость                  "
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/real_speed"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="10"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/space">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:id="@+id/space1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l6">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Манёвренность"
                android:id="@+id/info_hp"
                android:textSize="20dp"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/sum_health"
                android:text="10"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1"
                android:id="@+id/health_plus_one"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l7">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Атака"
                android:id="@+id/info_attack"
                android:textSize="20dp"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/sum_attack"
                android:text="10"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1"
                android:id="@+id/attack_plus_one"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l8">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Защита"
                android:id="@+id/info_protection"
                android:textSize="20dp"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/sum_protect"
                android:text="30"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1"
                android:id="@+id/protect_plus_one"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l9">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Скорость"
                android:id="@+id/info_speed1"
                android:textSize="20dp"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/sum_speed"
                android:text="30"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1"
                android:id="@+id/speed_plus_one"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/space2"
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <TextView
                android:id="@+id/space3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:id="@+id/l10">

            <TextView
                android:id="@+id/null_number"
                android:layout_width="277dp"
                android:layout_height="match_parent"
                android:text="Сбрасывает все значения, полностью возвращая деньги. Экспрементируйте!"
                android:textSize="14.5dp" />

            <Button
                android:id="@+id/null_number_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Сбросить всё" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>